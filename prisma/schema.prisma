generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Machines {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  name     String @unique
  imageUrl String @unique
  public_id String 
}

model Tools {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  name     String @unique
  imageUrl String @unique
  public_id String
}

model Materials {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  name     String @unique
  imageUrl String @unique
  public_id String
}
